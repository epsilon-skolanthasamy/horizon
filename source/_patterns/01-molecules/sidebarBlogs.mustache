{{#sidebarBlogs}}
	<div class="sidebar-blogs">
		{{#sbBlogList}}
			<div class="blog-header">
				<h3>{{blogHeader}}</h3>
			</div>
			<div class="blog-post">
				<div class="post-wrap">
					<img src="{{blogImg}}" alt="{{blogImgAltTxt}}">
					<div class="sb-blog-content">
						<p class="sb-blog-author">Author: {{sbBlogAuthor}}</p>
						<h4>{{sbBlogHeading}}</h4>
						<p class="sb-blog-date">{{sbBlogDate}}</p>
					</div>
					<div class="blog-cta">
						{{>atoms-links-icon}}
					</div>
				</div>
			</div>
		{{/sbBlogList}}
	</div>
{{/sidebarBlogs}}