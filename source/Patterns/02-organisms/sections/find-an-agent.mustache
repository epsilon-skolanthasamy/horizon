{{# findAgentDetailData }}
	<section class="full-width find-an-agent-detail">
		<div class="container-fluid">
			<div class="find-an-agent-header">
				<h1>{{sectionTitle}}</h1>
				<div class="find-an-agent-form">
					{{> molecules-input-with-cta }}
				</div>
			</div>

			{{> molecules-map }}

			<div class="agent-location">
				<h3 class="text-center">{{sectionSubTitle}}</h3>
				<div class="row  justify-content-center">
					<div class="col-md-10">
						<ul>
							{{# mapLocations }}
							<li>
								<h4 class="agent-name">{{no}}. {{name}}</h4>
								<p class="agent-phone">{{phone}}</p>
								<p class="agent-addr">{{{address}}}</p>
							</li>
							{{/ mapLocations }}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>
{{/ findAgentDetailData }}
